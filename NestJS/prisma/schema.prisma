// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_PRISMA_URL") // uses connection pooling
  directUrl = env("POSTGRES_URL_NON_POOLING") // uses a direct connection
}

model User {
  id       Int    @id @default(autoincrement())
  email    String @unique
  systemId Int
  system   System @relation(fields: [systemId], references: [id])
}

model System {
  id                           Int    @id @default(autoincrement())
  nominalVoltageOfElement      Float
  capacityOfOneElement         Float
  series                       Int
  paralel                      Int
  numberOfBatteryPacks         Int
  voltage                      Float
  BMSContinuousCurretnt        Int
  inverterChargingSpeedA       Int
  numberOfInverters            Int
  batteryMinPercentage         Float
  batteryMaxPercentage         Float
  totalContinuousPowerOutputKW Float
  Users                        User[]
}

model Price {
  id        Int   @id @default(autoincrement())
  value     Float @db.DoublePrecision
  timeStamp Int
}
